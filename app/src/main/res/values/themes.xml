<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.WineWMS" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
<!--        Theme.AppCompat.DayNight.DarkActionBar-->
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/DarkRedWine</item>
        <item name="colorPrimaryVariant">@color/DarkGray</item>
        <item name="colorOnPrimary">@color/WhiteSmoke</item>
        <item name="colorSecondary">@color/LightRedWine</item>
        <item name="colorSecondaryVariant">@color/RedWine</item>
        <item name="colorOnSecondary">@color/Dark</item>

        <!-- Font family and color -->
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textColor">@color/DarkGray</item>

        <!-- Button style -->
        <item name="buttonStyle">@style/RedButton</item>

    </style>

    <!-- Custom Button Style -->
    <style name="RedButton" parent="Widget.AppCompat.Button">
        <!-- Background color -->
        <item name="backgroundTint">@color/DarkRedWine</item>
        <!-- Text color -->
        <item name="android:textColor">@color/WhiteSmoke</item>
        <!-- Corner radius for rounded edges -->
        <item name="shapeAppearanceOverlay">@style/CustomButtonShape</item>
        <!-- Elevation and padding -->
        <item name="android:elevation">4dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="RoseButton" parent="Widget.AppCompat.Button">
        <!-- Background color -->
        <item name="backgroundTint">@color/LightRedWine</item>
        <!-- Text color -->
        <item name="android:textColor">@color/DarkRedWine</item>
        <!-- Corner radius for rounded edges -->
        <item name="shapeAppearanceOverlay">@style/CustomButtonShape</item>
        <!-- Elevation and padding -->
        <item name="android:elevation">4dp</item>
    </style>

    <style name="YellowButton" parent="Widget.AppCompat.Button">
        <!-- Background color -->
        <item name="backgroundTint">@color/ChardonnayWine</item>
        <!-- Text color -->
        <item name="android:textColor">@color/DarkRedWine</item>
        <!-- Corner radius for rounded edges -->
        <item name="shapeAppearanceOverlay">@style/CustomButtonShape</item>
        <!-- Elevation and padding -->
        <item name="android:elevation">4dp</item>
    </style>

    <style name="GoldButton" parent="Widget.AppCompat.Button">
        <!-- Background color -->
        <item name="backgroundTint">@color/GoldRod</item>
        <!-- Text color -->
        <item name="android:textColor">@color/DarkRedWine</item>
        <!-- Corner radius for rounded edges -->
        <item name="shapeAppearanceOverlay">@style/CustomButtonShape</item>
        <!-- Elevation and padding -->
        <item name="android:elevation">4dp</item>
    </style>

    <!-- Shape style for rounded corners -->
    <style name="CustomButtonShape" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">32dp</item>
    </style>

    <style name="CustomImageShape" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">32dp</item>
    </style>

    <style name="CustomRatingBar" parent="@style/Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_rating_bar</item>
        <item name="android:minHeight">15dip</item>
        <item name="android:maxHeight">15dip</item>
    </style>

</resources>